  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.Azure.Devices.Edge.Storage\Microsoft.Azure.Devices.Edge.Storage.csproj" />
  </ItemGroup>

  <Import Project="$(NuGetPackageRoot)\rocksdb-native-arm\5.4.6\build\rocksdb-native-arm.targets" Condition="Exists('$(NuGetPackageRoot)\rocksdb-native-arm\5.4.6\build\rocksdb-native-arm.targets')" />
    <Target Name="EnsureNuGetPackageBuildImports" BeforeTargets="PrepareForBuild">
